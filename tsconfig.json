{
  "compilerOptions": {
    "target": "ES5",                                                                        
    "jsx": "preserve", 
    "module": "ESNext",                                                
    "moduleResolution": "node",
    "rootDir": "./src",                     
    "baseUrl": ".",      
    "esModuleInterop": true,                                  
    "allowSyntheticDefaultImports": true,                      
    "paths": {
      "/@/*": ["src/*"],
      "@/*": ["src/*"],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "script/**/*",
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "NodeNext",
    }
  }
}